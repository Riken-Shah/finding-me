{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["@cloudflare/workers-types", "node", "jest"]
  },
  "include": ["src/scripts/**/*"],
  "exclude": ["node_modules", "dist"]
} 